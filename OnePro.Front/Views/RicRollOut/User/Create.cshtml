@model OnePro.Front.ViewModels.RicRollOut.RicRollOutCreateViewModel
@using Microsoft.AspNetCore.Html

@{
    ViewBag.Title = "Form RIC RollOut";
    Layout = "_LayoutDashboard";
}

<div class="min-h-screen bg-slate-50">
    <div class="max-w-6xl mx-auto px-2 sm:px-6 py-4">

        <form asp-controller="RicRollOutUser"
              asp-action="Create"
              method="post"
              enctype="multipart/form-data">

            @Html.AntiForgeryToken()

            <div class="bg-white rounded-2xl shadow-sm ring-1 ring-slate-200/80 overflow-hidden">

                <!-- HEADER -->
                <div class="border-b border-slate-100 bg-white px-8 py-4">
                    <p class="text-xl font-semibold tracking-wide">
                        RIC RollOut
                    </p>
                    <p class="text-sm text-slate-500 mt-1">
                        Form pengajuan RollOut aplikasi (entitas, dokumen pendukung, checklist readiness).
                    </p>
                </div>

                <!-- SECTION: INFORMASI UMUM -->
                <div class="p-8 space-y-8">

                    <!-- Entitas -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-800">
                            Entitas <span class="text-red-600">*</span>
                        </label>
                        <input asp-for="Entitas"
                               class="w-full rounded-xl border border-slate-200 px-4 py-2.5 text-sm text-slate-900
                                      focus:outline-none focus:ring-2 focus:ring-slate-900/10"
                               placeholder="Contoh: PT Pertamina Patra Niaga / PT Pertamina Hulu Rokan" />
                        <span asp-validation-for="Entitas" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Judul Aplikasi -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-800">
                            Judul Aplikasi <span class="text-red-600">*</span>
                        </label>
                        <input asp-for="JudulAplikasi"
                               class="w-full rounded-xl border border-slate-200 px-4 py-2.5 text-sm text-slate-900
                                      focus:outline-none focus:ring-2 focus:ring-slate-900/10"
                               placeholder="Contoh: Aplikasi Monitoring Kehadiran PKL" />
                        <p class="text-xs text-slate-400">
                            Nama aplikasi / sistem yang akan di-rollout.
                        </p>
                        <span asp-validation-for="JudulAplikasi" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Hashtag -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-800">
                            Hashtag
                        </label>

                        <div class="rounded-lg border border-dashed border-slate-200 bg-white px-4 py-3">
                            <div id="hashtag-badges" class="flex flex-wrap gap-2 mb-2">
                                @if (Model.Hashtags != null && Model.Hashtags.Any())
                                {
                                    for (var i = 0; i < Model.Hashtags.Count; i++)
                                    {
                                        <span class="tag-badge inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2.5 py-1 text-xs font-medium text-indigo-700 border border-indigo-100">
                                            <span>#@Model.Hashtags[i]</span>
                                            <button type="button"
                                                    class="tag-remove inline-flex h-4 w-4 items-center justify-center rounded-full bg-indigo-100 text-[10px] text-indigo-600"
                                                    data-tag="@Model.Hashtags[i]">
                                                ×
                                            </button>
                                            <input type="hidden" name="Hashtags[@i]" value="@Model.Hashtags[i]" />
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-xs text-slate-400 empty-hashtag-placeholder">
                                        Belum ada hashtag. Tambahin buat ngelompokkin RollOut lo.
                                    </span>
                                }
                            </div>

                            <input id="hashtag-input"
                                   type="text"
                                   class="w-full border-0 bg-transparent px-0 py-2 text-base text-slate-900 placeholder:text-slate-400 focus:ring-0 focus:outline-none"
                                   placeholder="Ketik hashtag lalu tekan Enter (mis. rollout, go_live, readiness)"
                                   autocomplete="off" />
                        </div>

                        <p class="text-xs text-slate-400">
                            Pakai format tanpa spasi biar gampang di-*filter* (contoh: <span class="font-mono text-[11px]">go_live</span>).
                        </p>
                    </div>

                    <!-- FILES -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                        <!-- Compare With As-Is Holding Process Files -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-800">
                                Compare With As-Is Holding Process (Files)
                            </label>

                            <label class="flex items-center justify-between gap-3 rounded-xl border border-slate-200 bg-white px-4 py-3 cursor-pointer hover:bg-slate-50 transition">
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-slate-50 border border-slate-200">
                                        <i class="ri-upload-cloud-2-line text-xl text-slate-600"></i>
                                    </span>
                                    <div>
                                        <div class="text-sm font-medium text-slate-800">Pilih dokumen</div>
                                        <div class="file-name text-xs text-slate-400">Bisa multiple file</div>
                                    </div>
                                </div>
                                <span class="text-xs text-slate-500">Browse</span>

                                <input asp-for="CompareWithAsIsHoldingProcessFiles" type="file" multiple class="hidden" />
                            </label>

                            <p class="text-xs text-slate-400">
                                Upload dokumen pembanding proses holding (as-is).
                            </p>
                        </div>

                        <!-- STK As-Is To-Be Files -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-800">
                                STK As-Is To-Be (Files)
                            </label>

                            <label class="flex items-center justify-between gap-3 rounded-xl border border-slate-200 bg-white px-4 py-3 cursor-pointer hover:bg-slate-50 transition">
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-slate-50 border border-slate-200">
                                        <i class="ri-file-list-3-line text-xl text-slate-600"></i>
                                    </span>
                                    <div>
                                        <div class="text-sm font-medium text-slate-800">Pilih dokumen</div>
                                        <div class="file-name text-xs text-slate-400">Bisa multiple file</div>
                                    </div>
                                </div>
                                <span class="text-xs text-slate-500">Browse</span>

                                <input asp-for="StkAsIsToBeFiles" type="file" multiple class="hidden" />
                            </label>

                            <p class="text-xs text-slate-400">
                                Upload STK (as-is & to-be) untuk rollout.
                            </p>
                        </div>

                    </div>
                </div>

                <!-- SECTION: CHECKLIST READINESS -->
                <div class="border-y border-slate-100 bg-white px-8 py-4">
                    <p class="text-[11px] font-semibold tracking-wide text-slate-500 uppercase">
                        Checklist Readiness
                    </p>
                </div>

                <div class="p-8 space-y-5">

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                        @Checklist("IsJoinedDomainAdPertamina", "Sudah join domain AD Pertamina", "Aplikasi/user sudah terintegrasi AD Pertamina.")
                        @Checklist("IsUsingErpPertamina", "Menggunakan ERP Pertamina", "Jika terkait proses bisnis ERP, pastikan align.")
                        @Checklist("IsImplementedRequiredActivation", "Required activation sudah diimplementasikan", "Semua requirement aktivasi sudah dipenuhi.")
                        @Checklist("HasDataCenterConnection", "Ada koneksi ke Data Center", "Koneksi network / VPN / route sudah ready.")
                        @Checklist("HasRequiredResource", "Resource sudah tersedia", "Server, lisensi, akun, akses, dsb sudah aman.")

                    </div>

                    <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
                        <div class="flex items-start gap-3">
                            <i class="ri-information-line text-lg text-slate-500 mt-0.5"></i>
                            <p class="text-sm text-slate-600">
                                Checklist ini buat memastikan rollout lu gak “mentok” di teknis pas udah jalan.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- FOOTER BUTTONS -->
                <div class="flex flex-col gap-4 border-t border-slate-100 bg-white px-8 py-4 sm:flex-row sm:items-center sm:justify-between">
                    <button type="reset"
                            class="inline-flex items-center gap-2 text-sm font-medium text-slate-500 hover:text-slate-700">
                        <span class="inline-flex h-6 w-6 items-center justify-center rounded-full border border-slate-300 text-[11px]">
                            ↺
                        </span>
                        Reset
                    </button>

                    <div class="flex items-center gap-3">
                        <button type="submit" name="action" value="save"
                                class="inline-flex items-center justify-center rounded-lg border border-slate-300 bg-white px-5 py-2.5 text-sm font-medium text-slate-700 shadow-sm hover:bg-slate-100 transition-colors">
                            Simpan Draft
                        </button>
                        <button type="submit" name="action" value="submit"
                                class="inline-flex items-center justify-center rounded-lg border border-indigo-600 bg-indigo-600 px-5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500/60 focus:ring-offset-1 focus:ring-offset-slate-50 transition-all">
                            Ajukan RollOut
                        </button>
                    </div>
                </div>

            </div>
        </form>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />

            <script>
                // ===== HASHTAG =====
                (function () {
                    const badgesContainer = document.getElementById('hashtag-badges');
                    const input = document.getElementById('hashtag-input');

                    function createTagBadge(tag) {
                        tag = tag.trim();
                        if (!tag) return;

                        const exists = badgesContainer.querySelector('input[type="hidden"][value="' + tag + '"]');
                        if (exists) return;

                        const index = badgesContainer.querySelectorAll('input[type="hidden"]').length;

                        const placeholder = badgesContainer.querySelector('.empty-hashtag-placeholder');
                        if (placeholder) placeholder.remove();

                        const span = document.createElement('span');
                        span.className = 'tag-badge inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2.5 py-1 text-xs font-medium text-indigo-700 border border-indigo-100';

                        span.innerHTML =
                            '<span>#' + tag + '</span>' +
                            '<button type="button" class="tag-remove inline-flex h-4 w-4 items-center justify-center rounded-full bg-indigo-100 text-[10px] text-indigo-600" data-tag="' + tag + '">×</button>' +
                            '<input type="hidden" name="Hashtags[' + index + ']" value="' + tag + '" />';

                        badgesContainer.appendChild(span);
                    }

                    if (input) {
                        input.addEventListener('keydown', function (e) {
                            if (e.key === 'Enter') {
                                e.preventDefault();
                                const value = input.value.replace(/^#+/, '');
                                if (value.trim()) {
                                    createTagBadge(value);
                                    input.value = '';
                                }
                            }
                        });
                    }

                    if (badgesContainer) {
                        badgesContainer.addEventListener('click', function (e) {
                            if (e.target.classList.contains('tag-remove')) {
                                const badge = e.target.closest('.tag-badge');
                                if (badge) badge.remove();

                                const hiddenInputs = badgesContainer.querySelectorAll('input[type="hidden"]');
                                hiddenInputs.forEach((inp, idx) => {
                                    inp.name = 'Hashtags[' + idx + ']';
                                });

                                if (hiddenInputs.length === 0) {
                                    const span = document.createElement('span');
                                    span.className = 'text-xs text-slate-400 empty-hashtag-placeholder';
                                    span.textContent = 'Belum ada hashtag. Tambahin buat ngelompokkin RollOut lo.';
                                    badgesContainer.appendChild(span);
                                }
                            }
                        });
                    }
                })();

                // ===== FILE INPUT LABEL (multiple aware) =====
                document.addEventListener("change", function (e) {
                    if (!(e.target instanceof HTMLInputElement)) return;
                    if (e.target.type !== "file") return;

                    const files = e.target.files;
                    if (!files || files.length === 0) return;

                    const label = e.target.closest("label");
                    if (!label) return;

                    const nameEl = label.querySelector(".file-name");
                    if (!nameEl) return;

                    if (files.length === 1) {
                        nameEl.textContent = files[0].name;
                    } else {
                        nameEl.textContent = files.length + " file dipilih";
                    }
                });
            </script>
        }
    </div>
</div>

@functions {
    // helper render checkbox card
    private IHtmlContent Checklist(string aspFor, string title, string desc)
    {
        var html =
$@"
<div class='flex items-start justify-between gap-4 rounded-xl border border-slate-200 bg-white px-4 py-4 hover:bg-slate-50 transition'>
    <div class='flex items-start gap-3'>
        <span class='inline-flex h-10 w-10 items-center justify-center rounded-xl bg-slate-50 border border-slate-200'>
            <i class='ri-checkbox-circle-line text-xl text-slate-500'></i>
        </span>
        <div class='space-y-1'>
            <p class='text-sm font-semibold text-slate-900'>{title}</p>
            <p class='text-xs text-slate-500'>{desc}</p>
        </div>
    </div>
    <div class='pt-1'>
        <input type='checkbox' name='{aspFor}' value='true'
               class='h-5 w-5 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500' />
        <input type='hidden' name='{aspFor}' value='false' />
    </div>
</div>";
        return new HtmlString(html);
    }
}
