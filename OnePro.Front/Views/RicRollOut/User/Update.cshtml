                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                                @ChecklistCard("Sudah join domain AD Pertamina", "Aplikasi/user sudah terintegrasi AD Pertamina.", Html.CheckBoxFor(m => m.IsJoinedDomainAdPertamina, new { @class = "h-5 w-5 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" }))
                                @ChecklistCard("Menggunakan ERP Pertamina", "Jika terkait proses bisnis ERP, pastikan align.", Html.CheckBoxFor(m => m.IsUsingErpPertamina, new { @class = "h-5 w-5 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" }))
                                @ChecklistCard("Required activation sudah diimplementasikan", "Semua requirement aktivasi sudah dipenuhi.", Html.CheckBoxFor(m => m.IsImplementedRequiredActivation, new { @class = "h-5 w-5 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" }))
                                @ChecklistCard("Ada koneksi ke Data Center", "Koneksi network / VPN / route sudah ready.", Html.CheckBoxFor(m => m.HasDataCenterConnection, new { @class = "h-5 w-5 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" }))
                                @ChecklistCard("Resource sudah tersedia", "Server, lisensi, akun, akses, dsb sudah aman.", Html.CheckBoxFor(m => m.HasRequiredResource, new { @class = "h-5 w-5 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" }))

