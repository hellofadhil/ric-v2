@model OnePro.Front.ViewModels.RicRollOut.RicRollOutCreateViewModel
@using Microsoft.AspNetCore.Html
@using System.IO

@{
    ViewBag.Title = "Edit RIC RollOut";
    Layout = "_LayoutDashboard";
}

<div class="min-h-screen bg-slate-50">
    <div class="max-w-6xl mx-auto px-2 sm:px-6 py-4">

        <form asp-controller="RicRollOutUser"
              asp-action="Edit"
              asp-route-id="@Model.Id"
              method="post"
              enctype="multipart/form-data">

            @Html.AntiForgeryToken()

            <input asp-for="Id" type="hidden" />

            <div class="bg-white rounded-2xl shadow-sm ring-1 ring-slate-200/80 overflow-hidden">

                <!-- HEADER -->
                <div class="border-b border-slate-100 bg-white px-8 py-4">
                    <p class="text-xl font-semibold tracking-wide">
                        Edit RIC RollOut
                    </p>
                    <p class="text-sm text-slate-500 mt-1">
                        Update pengajuan RollOut aplikasi (entitas, dokumen pendukung, checklist readiness).
                    </p>
                </div>

                <!-- SECTION: INFORMASI UMUM -->
                <div class="p-8 space-y-8">

                    <!-- Entitas -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-800">
                            Entitas <span class="text-red-600">*</span>
                        </label>
                        <input asp-for="Entitas"
                               class="w-full rounded-xl border border-slate-200 px-4 py-2.5 text-sm text-slate-900
                                      focus:outline-none focus:ring-2 focus:ring-slate-900/10"
                               placeholder="Contoh: PT Pertamina Patra Niaga / PT Pertamina Hulu Rokan" />
                        <span asp-validation-for="Entitas" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Judul Aplikasi -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-800">
                            Judul Aplikasi <span class="text-red-600">*</span>
                        </label>
                        <input asp-for="JudulAplikasi"
                               class="w-full rounded-xl border border-slate-200 px-4 py-2.5 text-sm text-slate-900
                                      focus:outline-none focus:ring-2 focus:ring-slate-900/10"
                               placeholder="Contoh: Aplikasi Monitoring Kehadiran PKL" />
                        <p class="text-xs text-slate-400">
                            Nama aplikasi / sistem yang akan di-rollout.
                        </p>
                        <span asp-validation-for="JudulAplikasi" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Hashtag -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-800">
                            Hashtag
                        </label>

                        <div class="rounded-lg border border-dashed border-slate-200 bg-white px-4 py-3">
                            <div id="hashtag-badges" class="flex flex-wrap gap-2 mb-2">
                                @if (Model.Hashtags != null && Model.Hashtags.Any())
                                {
                                    for (var i = 0; i < Model.Hashtags.Count; i++)
                                    {
                                        <span class="tag-badge inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2.5 py-1 text-xs font-medium text-indigo-700 border border-indigo-100">
                                            <span>#@Model.Hashtags[i]</span>
                                            <button type="button"
                                                    class="tag-remove inline-flex h-4 w-4 items-center justify-center rounded-full bg-indigo-100 text-[10px] text-indigo-600"
                                                    data-tag="@Model.Hashtags[i]">
                                                ×
                                            </button>
                                            <input type="hidden" name="Hashtags[@i]" value="@Model.Hashtags[i]" />
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-xs text-slate-400 empty-hashtag-placeholder">
                                        Belum ada hashtag. Tambahin buat ngelompokkin RollOut lo.
                                    </span>
                                }
                            </div>

                            <input id="hashtag-input"
                                   type="text"
                                   class="w-full border-0 bg-transparent px-0 py-2 text-base text-slate-900 placeholder:text-slate-400 focus:ring-0 focus:outline-none"
                                   placeholder="Ketik hashtag lalu tekan Enter (mis. rollout, go_live, readiness)"
                                   autocomplete="off" />
                        </div>

                        <p class="text-xs text-slate-400">
                            Pakai format tanpa spasi biar gampang di-*filter* (contoh: <span class="font-mono text-[11px]">go_live</span>).
                        </p>
                    </div>

                    <!-- FILES -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                        <!-- Compare With As-Is Holding Process Files -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-800">
                                Compare With As-Is Holding Process (Files)
                            </label>

                            @* ✅ EXISTING + hidden inputs biar kepost balik *@
                            @if (Model.ExistingCompareWithAsIsHoldingProcessFileUrls != null && Model.ExistingCompareWithAsIsHoldingProcessFileUrls.Any())
                            {
                                <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
                                    <p class="text-xs font-medium text-slate-700">File saat ini:</p>
                                    <div class="mt-2">
                                        <a href="@($"/RicRollOut/User/Files/{Model.Id}/compare")"
                                           class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-medium text-slate-700 hover:bg-slate-50 transition">
                                            <i class="ri-download-2-line"></i>
                                            Download all files (@Model.ExistingCompareWithAsIsHoldingProcessFileUrls.Count)
                                        </a>
                                    </div>
                                    @{
                                        var i = 0;
                                        foreach (var url in Model.ExistingCompareWithAsIsHoldingProcessFileUrls)
                                        {
                                            <input type="hidden"
                                                   name="ExistingCompareWithAsIsHoldingProcessFileUrls[@i]"
                                                   value="@url" />
                                            i++;
                                        }
                                    }
                                    <p class="mt-2 text-[11px] text-slate-500">
                                        Kosongkan input file di bawah kalau tidak ingin mengganti.
                                    </p>
                                </div>
                            }

                            <label class="flex items-center justify-between gap-3 rounded-xl border border-slate-200 bg-white px-4 py-3 cursor-pointer hover:bg-slate-50 transition">
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-slate-50 border border-slate-200">
                                        <i class="ri-upload-cloud-2-line text-xl text-slate-600"></i>
                                    </span>
                                    <div>
                                        <div class="text-sm font-medium text-slate-800">Pilih dokumen</div>
                                        <div class="file-name text-xs text-slate-400">Bisa multiple file</div>
                                    </div>
                                </div>
                                <span class="text-xs text-slate-500">Browse</span>

                                <input asp-for="CompareWithAsIsHoldingProcessFiles" type="file" multiple class="hidden" />
                            </label>

                            <p class="text-xs text-slate-400">
                                Upload dokumen pembanding proses holding (as-is).
                            </p>
                            <span asp-validation-for="CompareWithAsIsHoldingProcessFiles" class="text-xs text-red-600"></span>
                        </div>

                        <!-- STK As-Is To-Be Files -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-800">
                                STK As-Is To-Be (Files)
                            </label>

                            @* ✅ EXISTING + hidden inputs *@
                            @if (Model.ExistingStkAsIsToBeFileUrls != null && Model.ExistingStkAsIsToBeFileUrls.Any())
                            {
                                <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
                                    <p class="text-xs font-medium text-slate-700">File saat ini:</p>
                                    <div class="mt-2">
                                        <a href="@($"/RicRollOut/User/Files/{Model.Id}/stk")"
                                           class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-medium text-slate-700 hover:bg-slate-50 transition">
                                            <i class="ri-download-2-line"></i>
                                            Download all files (@Model.ExistingStkAsIsToBeFileUrls.Count)
                                        </a>
                                    </div>
                                    @{
                                        var i = 0;
                                        foreach (var url in Model.ExistingStkAsIsToBeFileUrls)
                                        {
                                            <input type="hidden"
                                                   name="ExistingStkAsIsToBeFileUrls[@i]"
                                                   value="@url" />
                                            i++;
                                        }
                                    }
                                    <p class="mt-2 text-[11px] text-slate-500">
                                        Kosongkan input file di bawah kalau tidak ingin mengganti.
                                    </p>
                                </div>
                            }

                            <label class="flex items-center justify-between gap-3 rounded-xl border border-slate-200 bg-white px-4 py-3 cursor-pointer hover:bg-slate-50 transition">
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-slate-50 border border-slate-200">
                                        <i class="ri-file-list-3-line text-xl text-slate-600"></i>
                                    </span>
                                    <div>
                                        <div class="text-sm font-medium text-slate-800">Pilih dokumen</div>
                                        <div class="file-name text-xs text-slate-400">Bisa multiple file</div>
                                    </div>
                                </div>
                                <span class="text-xs text-slate-500">Browse</span>

                                <input asp-for="StkAsIsToBeFiles" type="file" multiple class="hidden" />
                            </label>

                            <p class="text-xs text-slate-400">
                                Upload STK (as-is & to-be) untuk rollout.
                            </p>
                            <span asp-validation-for="StkAsIsToBeFiles" class="text-xs text-red-600"></span>
                        </div>

                    </div>
                </div>

                <!-- SECTION: CHECKLIST READINESS -->
