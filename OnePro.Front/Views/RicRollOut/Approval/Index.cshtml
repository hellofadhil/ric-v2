@using Core.Contracts.RicRollOut.Responses
@using OnePro.Front.Helpers
@using Core.Models.Enums
@model List<RicRollOutListItemResponse>

@{
    ViewData["Title"] = "RIC RollOut Approval";
    Layout = "_LayoutDashboard";

    var total = Model?.Count ?? 0;
    var q = Context.Request.Query["q"].ToString();
    var statusFilter = Context.Request.Query["status"].ToString();
}

<div class="max-w-6xl mx-auto mt-6">

    <!-- HEADER -->
    <div class="mt-8">
        <div class="bg-white rounded-2xl border border-gray-200/80 p-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                    <h1 class="text-xl font-semibold text-gray-900 tracking-tight">RIC RollOut Approval</h1>
                    <p class="text-sm text-gray-500 mt-1">Daftar RollOut yang masuk tahap approval. Pilih satu buat approve.</p>
                </div>

                <a asp-action="UserIndex"
                   class="@BtnGhost()">
                    <i class="ri-arrow-left-line text-lg"></i>
                    Back to RollOut List
                </a>
            </div>
        </div>
    </div>

    <!-- TOOLBAR -->
    <div class="mt-6 bg-white rounded-2xl border border-gray-200/80 p-5">
        <form method="get" class="flex flex-col md:flex-row md:items-end gap-4">
            <div class="flex-1">
                <label class="text-xs text-gray-500">Search (entitas / judul / user / id)</label>
                <div class="relative mt-1">
                    <i class="ri-search-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input name="q"
                           type="text"
                           value="@q"
                           placeholder="Cari entitas, judul, user, atau ID..."
                           class="@InputBase("pl-10")" />
                </div>
            </div>

            <div class="w-full md:w-72">
                <label class="text-xs font-medium text-gray-600">Filter Status (Approval)</label>
                <div class="relative mt-1">
                    <i class="ri-filter-3-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>

                    <select name="status"
                            class="w-full appearance-none pl-10 pr-9 py-2.5 rounded-xl border border-gray-200 bg-white text-sm
                                   focus:outline-none focus:ring-2 focus:ring-gray-900/10 hover:border-gray-300 transition">
                        <option value="" selected="@(string.IsNullOrWhiteSpace(statusFilter) ? "selected" : null)">All</option>
                        <option value="@StatusRicRollOut.Approval_Manager_User" selected="@(statusFilter == StatusRicRollOut.Approval_Manager_User.ToString() ? "selected" : null)">@StatusRicRollOut.Approval_Manager_User</option>
                        <option value="@StatusRicRollOut.Approval_VP_User" selected="@(statusFilter == StatusRicRollOut.Approval_VP_User.ToString() ? "selected" : null)">@StatusRicRollOut.Approval_VP_User</option>
                        <option value="@StatusRicRollOut.Approval_Manager_BR" selected="@(statusFilter == StatusRicRollOut.Approval_Manager_BR.ToString() ? "selected" : null)">@StatusRicRollOut.Approval_Manager_BR</option>
                    </select>

                    <i class="ri-arrow-down-s-line absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>
                </div>
            </div>

            <button type="submit" class="@BtnPrimary()">
                <i class="ri-search-line"></i>
                Search
            </button>

            <a asp-action="ApprovalIndex" class="@BtnGhost()">
                <i class="ri-refresh-line"></i>
                Reset
            </a>
        </form>
        <div class="mt-3 text-xs text-gray-500">Menampilkan maksimal 10 data.</div>
    </div>

    <!-- TABLE -->
    <div class="mt-6 bg-white rounded-2xl border border-gray-200/80 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm table-fixed">
                <thead class="bg-gray-50/60 text-gray-500 uppercase text-xs">
                    <tr>
                        <th class="px-6 py-4 text-left w-36">ID</th>
                        <th class="px-3 py-4 text-left w-48">Entitas</th>
                        <th class="px-3 py-4 text-left w-60">Judul Aplikasi</th>
                        <th class="px-3 py-4 text-left w-40">User PIC</th>
                        <th class="px-3 py-4 text-left w-56">Status</th>
                        <th class="px-3 py-4 text-left w-44">Last Update</th>
                        <th class="px-6 py-4 text-center w-36">Action</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-100">
                    @if (Model?.Any() == true)
                    {
                        foreach (var item in Model)
                        {
                            var status = item.Status ?? "";

                            <tr class="hover:bg-gray-50 transition">

                                <td class="px-6 py-4 font-mono text-xs text-gray-500">
                                    <div class="truncate" title="@item.Id">@Trunc(item.Id.ToString(), 10)</div>
                                </td>

                                <td class="px-3 py-4">
                                    <div class="font-medium text-gray-900 leading-snug" title="@item.Entitas">
                                        @Html.Raw(BreakEveryTwoWords(Trunc(item.Entitas, 80)))
                                    </div>
                                </td>

                                <td class="px-3 py-4">
                                    <div class="font-medium text-gray-900 leading-snug" title="@item.JudulAplikasi">
                                        @Html.Raw(BreakEveryTwoWords(Trunc(item.JudulAplikasi, 100)))
                                    </div>
                                </td>

                                <td class="px-3 py-4 text-gray-700">
                                    <div class="truncate" title="@item.UserName">
                                        @item.UserName
                                    </div>
                                </td>

                                <td class="px-3 py-4">
                                    <span class="@($"{GetApprovalBadgeClass(status)} inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium")">
                                        @status
                                    </span>
                                </td>

                                <td class="px-3 py-4 text-xs text-gray-500">
                                    <div class="inline-flex items-center gap-2">
                                        <i class="ri-time-line text-gray-400"></i>
                                        @item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </td>

                                <td class="px-6 py-4">
                                    <div class="flex items-center justify-center gap-2">
                                        <a asp-action="Approval" asp-route-id="@item.Id"
                                           class="inline-flex items-center gap-2 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 text-xs font-semibold transition"
                                           title="Open Approval">
                                            <i class="ri-shield-check-line text-base"></i>
                                            Approval
                                        </a>
                                    </div>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center gap-2">
                                    <div class="w-14 h-14 rounded-2xl bg-gray-50 border border-gray-200 flex items-center justify-center">
                                        <i class="ri-inbox-line text-3xl text-gray-300"></i>
                                    </div>
                                    <p class="text-gray-700 font-semibold">Belum ada RollOut yang perlu di-approve.</p>
                                    <p class="text-gray-500 text-sm">Kalau udah masuk approval stage, bakal muncul rapi di sini.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="px-6 py-4 border-t border-gray-100 text-xs text-gray-500 flex items-center justify-between">
            <span class="inline-flex items-center gap-2">
                <i class="ri-information-line"></i>
                Gunakan search untuk mempercepat pencarian.
            </span>

            <span class="font-medium">Showing @total</span>
        </div>
    </div>
</div>
@functions {
    private string Trunc(string? text, int max)
    {
        if (string.IsNullOrWhiteSpace(text)) return "-";
        return text.Length > max ? text.Substring(0, max) + "..." : text;
    }

    private string InputBase(string extra = "")
        => $"w-full {extra} pr-3 py-2.5 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-900/10 text-sm";

    private string BtnPrimary()
        => "inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-red-700 hover:bg-red-800 text-white text-sm font-medium transition";

    private string BtnGhost()
        => "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl border border-gray-200 text-sm text-gray-700 hover:bg-gray-50 transition";

    private string GetApprovalBadgeClass(string status)
        => StatusBadgeHelper.GetStatusBadgeClass(status);

    private string BreakEveryTwoWords(string? text)
    {
        if (string.IsNullOrWhiteSpace(text))
            return "-";

        var words = text.Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries);
        if (words.Length <= 2)
            return string.Join(" ", words);

        var parts = new List<string>();
        for (var i = 0; i < words.Length; i += 2)
        {
            if (i + 1 < words.Length)
                parts.Add($"{words[i]} {words[i + 1]}");
            else
                parts.Add(words[i]);
        }

        return string.Join("<br>", parts);
    }
}
