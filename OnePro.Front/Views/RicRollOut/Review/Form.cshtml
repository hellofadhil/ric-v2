@model OnePro.Front.ViewModels.RicRollOut.RicRollOutCreateViewModel
@using Microsoft.AspNetCore.Html
@using System.Linq
@using System.IO

@{
    ViewBag.Title = "Review & Edit RIC RollOut";
    Layout = "_LayoutDashboard";

    var canEdit = ViewBag.CanEdit as bool? ?? false;
    var ro = canEdit ? null : "readonly";
    var dis = canEdit ? null : "disabled";
}

<div class="min-h-screen bg-slate-50">
    <div class="max-w-6xl mx-auto px-2 sm:px-6 py-4">

        @* asp-controller="RicRollOutReview" *@

        <form 
              asp-action="ReviewForm"
              method="post"
              enctype="multipart/form-data">

            @Html.AntiForgeryToken()

            <!-- ID disimpan hidden -->
            <input asp-for="Id" type="hidden" />

            <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
                <div class="lg:col-span-8">
                    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-slate-200/80 overflow-hidden">

                <!-- HEADER -->
                <div class="border-b border-slate-100 bg-white px-8 py-4">
                    <p class="text-xl font-semibold tracking-wide">
                        Review RIC RollOut
                    </p>
                    <p class="text-sm text-slate-500 mt-1">
                        Review & update data RollOut sebelum di-forward / di-reject.
                    </p>
                </div>

                <!-- BODY -->
                <fieldset disabled="@(!canEdit)">
                <div class="p-8 space-y-8">

                    <!-- INFO -->
                    <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
                        <div class="flex items-start gap-3">
                            <i class="ri-information-line text-lg text-slate-500 mt-0.5"></i>
                            <div class="text-sm text-slate-600">
                                <p class="font-medium text-slate-700">Catatan:</p>
                                <ul class="list-disc pl-5 mt-1 space-y-1 text-[13px]">
                                    <li>Kalau <span class="font-medium">Approve</span> → data akan di-forward ke tahap berikutnya.</li>
                                    <li>Kalau <span class="font-medium">Reject</span> → wajib isi catatan agar user paham apa yang harus dibenerin.</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Entitas -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-800">
                            Entitas <span class="text-red-600">*</span>
                        </label>
                        <input asp-for="Entitas"
                               class="w-full rounded-xl border border-slate-200 px-4 py-2.5 text-sm text-slate-900
                                      focus:outline-none focus:ring-2 focus:ring-slate-900/10"
                               placeholder="Contoh: PT Pertamina Patra Niaga / PT Pertamina Hulu Rokan" />
                        <span asp-validation-for="Entitas" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Judul Aplikasi -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-800">
                            Judul Aplikasi <span class="text-red-600">*</span>
                        </label>
                        <input asp-for="JudulAplikasi"
                               class="w-full rounded-xl border border-slate-200 px-4 py-2.5 text-sm text-slate-900
                                      focus:outline-none focus:ring-2 focus:ring-slate-900/10"
                               placeholder="Contoh: Aplikasi Monitoring Kehadiran PKL" />
                        <p class="text-xs text-slate-400">
                            Nama aplikasi / sistem yang akan di-rollout.
                        </p>
                        <span asp-validation-for="JudulAplikasi" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Hashtag -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-800">
                            Hashtag
                        </label>

                        <div class="rounded-lg border border-dashed border-slate-200 bg-white px-4 py-3">
                            <div id="hashtag-badges" class="flex flex-wrap gap-2 mb-2">
                                @if (Model.Hashtags != null && Model.Hashtags.Any())
                                {
                                    for (var i = 0; i < Model.Hashtags.Count; i++)
                                    {
                                        <span class="tag-badge inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2.5 py-1 text-xs font-medium text-indigo-700 border border-indigo-100">
                                            <span>#@Model.Hashtags[i]</span>
                                            <button type="button"
                                                    class="tag-remove inline-flex h-4 w-4 items-center justify-center rounded-full bg-indigo-100 text-[10px] text-indigo-600"
                                                    data-tag="@Model.Hashtags[i]">
                                                ×
                                            </button>
                                            <input type="hidden" name="Hashtags[@i]" value="@Model.Hashtags[i]" />
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-xs text-slate-400 empty-hashtag-placeholder">
                                        Belum ada hashtag. Tambahin buat ngelompokkin RollOut lo.
                                    </span>
                                }
                            </div>

                            <input id="hashtag-input"
                                   type="text"
                                   class="w-full border-0 bg-transparent px-0 py-2 text-base text-slate-900 placeholder:text-slate-400 focus:ring-0 focus:outline-none"
                                   placeholder="Ketik hashtag lalu tekan Enter (mis. rollout, go_live, readiness)"
                                   autocomplete="off" />
                        </div>

                        <p class="text-xs text-slate-400">
                            Pakai format tanpa spasi biar gampang di-*filter* (contoh: <span class="font-mono text-[11px]">go_live</span>).
                        </p>
                    </div>

                    <!-- FILES -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                        <!-- Compare With As-Is Holding Process Files -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-800">
                                Compare With As-Is Holding Process (Files)
                            </label>

                            @if (Model.ExistingCompareWithAsIsHoldingProcessFileUrls != null && Model.ExistingCompareWithAsIsHoldingProcessFileUrls.Any())
                            {
                                <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
                                    <p class="text-xs font-medium text-slate-700">File saat ini:</p>
                                    <div class="mt-2">
                                        <a href="@($"/RicRollOut/Review/Files/{Model.Id}/compare")"
                                           class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-medium text-slate-700 hover:bg-slate-50 transition">
                                            <i class="ri-download-2-line"></i>
                                            Download all files (@Model.ExistingCompareWithAsIsHoldingProcessFileUrls.Count)
                                        </a>
                                    </div>
                                    @{
                                        var i = 0;
                                        foreach (var url in Model.ExistingCompareWithAsIsHoldingProcessFileUrls)
                                        {
                                            <input type="hidden"
                                                   name="ExistingCompareWithAsIsHoldingProcessFileUrls[@i]"
                                                   value="@url" />
                                            i++;
                                        }
                                    }
                                    <p class="mt-2 text-[11px] text-slate-500">
                                        Kosongkan input file di bawah kalau tidak ingin mengganti.
                                    </p>
                                </div>
                            }

                            <label class="flex items-center justify-between gap-3 rounded-xl border border-slate-200 bg-white px-4 py-3 cursor-pointer hover:bg-slate-50 transition">
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-slate-50 border border-slate-200">
                                        <i class="ri-upload-cloud-2-line text-xl text-slate-600"></i>
                                    </span>
                                    <div>
                                        <div class="text-sm font-medium text-slate-800">Pilih dokumen</div>
                                        <div class="file-name text-xs text-slate-400">Bisa multiple file</div>
                                    </div>
                                </div>
                                <span class="text-xs text-slate-500">Browse</span>

                                <input asp-for="CompareWithAsIsHoldingProcessFiles" type="file" multiple class="hidden" />
                            </label>

                            <p class="text-xs text-slate-400">
                                Upload dokumen pembanding proses holding (as-is).
                            </p>
                            <span asp-validation-for="CompareWithAsIsHoldingProcessFiles" class="text-xs text-red-600"></span>
                        </div>

                        <!-- STK As-Is To-Be Files -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-800">
                                STK As-Is To-Be (Files)
                            </label>

                            @if (Model.ExistingStkAsIsToBeFileUrls != null && Model.ExistingStkAsIsToBeFileUrls.Any())
                            {
                                <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
                                    <p class="text-xs font-medium text-slate-700">File saat ini:</p>
                                    <div class="mt-2">
                                        <a href="@($"/RicRollOut/Review/Files/{Model.Id}/stk")"
                                           class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-medium text-slate-700 hover:bg-slate-50 transition">
                                            <i class="ri-download-2-line"></i>
                                            Download all files (@Model.ExistingStkAsIsToBeFileUrls.Count)
                                        </a>
                                    </div>
                                    @{
                                        var i = 0;
                                        foreach (var url in Model.ExistingStkAsIsToBeFileUrls)
                                        {
                                            <input type="hidden"
                                                   name="ExistingStkAsIsToBeFileUrls[@i]"
                                                   value="@url" />
                                            i++;
                                        }
                                    }
                                    <p class="mt-2 text-[11px] text-slate-500">
                                        Kosongkan input file di bawah kalau tidak ingin mengganti.
                                    </p>
                                </div>
                            }

                            <label class="flex items-center justify-between gap-3 rounded-xl border border-slate-200 bg-white px-4 py-3 cursor-pointer hover:bg-slate-50 transition">
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-slate-50 border border-slate-200">
                                        <i class="ri-file-list-3-line text-xl text-slate-600"></i>
                                    </span>
                                    <div>
                                        <div class="text-sm font-medium text-slate-800">Pilih dokumen</div>
                                        <div class="file-name text-xs text-slate-400">Bisa multiple file</div>
                                    </div>
                                </div>
                                <span class="text-xs text-slate-500">Browse</span>

                                <input asp-for="StkAsIsToBeFiles" type="file" multiple class="hidden" />
                            </label>

                            <p class="text-xs text-slate-400">
                                Upload STK (as-is & to-be) untuk rollout.
                            </p>
                            <span asp-validation-for="StkAsIsToBeFiles" class="text-xs text-red-600"></span>
                        </div>
                    </div>
                </div>

                <!-- CHECKLIST HEADER -->
                <div class="border-y border-slate-100 bg-white px-8 py-4">
                    <p class="text-[11px] font-semibold tracking-wide text-slate-500 uppercase">
                        Checklist Readiness
                    </p>
                </div>

                <!-- CHECKLIST BODY -->
                <div class="p-8 space-y-5">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        @ChecklistCard("IsJoinedDomainAdPertamina", "Sudah join domain AD Pertamina", "Aplikasi/user sudah terintegrasi AD Pertamina.", Model.IsJoinedDomainAdPertamina)
                        @ChecklistCard("IsUsingErpPertamina", "Menggunakan ERP Pertamina", "Jika terkait proses bisnis ERP, pastikan align.", Model.IsUsingErpPertamina)
                        @ChecklistCard("IsImplementedRequiredActivation", "Required activation sudah diimplementasikan", "Semua requirement aktivasi sudah dipenuhi.", Model.IsImplementedRequiredActivation)
                        @ChecklistCard("HasDataCenterConnection", "Ada koneksi ke Data Center", "Koneksi network / VPN / route sudah ready.", Model.HasDataCenterConnection)
                        @ChecklistCard("HasRequiredResource", "Resource sudah tersedia", "Server, lisensi, akun, akses, dsb sudah aman.", Model.HasRequiredResource)
                    </div>

                    <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
                        <div class="flex items-start gap-3">
                            <i class="ri-information-line text-lg text-slate-500 mt-0.5"></i>
                            <p class="text-sm text-slate-600">
                                Checklist ini buat memastikan rollout lu gak “mentok” di teknis pas udah jalan.
                            </p>
                        </div>
                    </div>
                </div>
                </fieldset>

                <!-- FOOTER ACTIONS -->
                <div class="border-t border-slate-100 bg-white px-8 py-4">
                    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">

                        <a asp-action="ReviewIndex"
                           class="inline-flex items-center gap-2 text-sm font-medium text-slate-500 hover:text-slate-700">
                            <span class="inline-flex h-6 w-6 items-center justify-center rounded-full border border-slate-300 text-[11px]">
                                ←
                            </span>
                            Kembali
                        </a>

                        @if (canEdit)
                        {
                            <div class="flex items-center gap-3">
                                <button type="button"
                                        id="btn-reject-toggle"
                                        class="inline-flex items-center justify-center rounded-lg border border-red-500 bg-white px-5 py-2.5 text-sm font-semibold text-red-600 shadow-sm hover:bg-red-50 transition-colors">
                                    Reject
                                </button>

                                <button type="submit" name="action" value="approve"
                                        class="inline-flex items-center justify-center rounded-lg border border-emerald-600 bg-emerald-600 px-5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/60 focus:ring-offset-1 focus:ring-offset-slate-50 transition-all">
                                    Approve & Forward
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="text-xs text-slate-500">Mode view-only untuk role ini.</div>
                        }
                    </div>

                    @if (canEdit)
                    {
                        <!-- REJECT PANEL -->
                        <div id="reject-panel" class="hidden mt-4 rounded-xl border border-red-100 bg-red-50 px-6 py-4">
                            <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">

                                <div class="flex-1">
                                    <label for="RejectNote" class="block text-xs font-semibold text-red-700 mb-1">
                                        Catatan Penolakan <span class="text-red-700">*</span>
                                    </label>
                                    <p class="text-[11px] text-red-600 mb-1">
                                        Jelasin kenapa direject dan apa yang harus diperbaiki user.
                                    </p>

                                    <!-- IMPORTANT: name="note" biar bind ke parameter string? note -->
                                    <textarea id="RejectNote"
                                              name="note"
                                              rows="3"
                                              class="block w-full rounded-lg border border-red-300 px-3 py-2 text-sm focus:border-red-500 focus:ring-red-500 bg-white"></textarea>

                                    <span class="text-[11px] text-red-600" id="reject-note-error" style="display:none;">
                                        Catatan penolakan wajib diisi.
                                    </span>
                                </div>

                                <div class="flex flex-col gap-2 mt-3 sm:mt-0 sm:w-44">
                                    <button type="button"
                                            id="btn-reject-cancel"
                                            class="inline-flex items-center justify-center rounded-lg border border-slate-300 bg-white px-4 py-2 text-xs font-medium text-slate-700 hover:bg-slate-100">
                                        Cancel
                                    </button>

                                    <button type="submit"
                                            name="action"
                                            value="reject"
                                            class="inline-flex items-center justify-center rounded-lg border border-red-600 bg-red-600 px-4 py-2 text-xs font-semibold text-white shadow-sm hover:bg-red-700">
                                        Submit Reject
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                </div>

                <aside class="lg:col-span-4 space-y-4 lg:sticky lg:top-6 h-fit">

                    <!-- Reviews -->
                    <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                        <div class="px-6 py-4 border-b border-slate-100">
                            <h2 class="text-sm font-semibold text-slate-800">Reviews</h2>
                            <p class="mt-1 text-xs text-slate-500">Catatan reviewer untuk RollOut ini.</p>
                        </div>

                        <div class="px-6 py-4">
                            @if (Model.Reviews != null && Model.Reviews.Any())
                            {
                                <div class="space-y-3">
                                    @foreach (var rv in Model.Reviews.OrderByDescending(x => x.CreatedAt))
                                    {
                                        <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
                                            <div class="flex items-start justify-between gap-3">
                                                <div class="min-w-0">
                                                    <div class="flex flex-wrap items-center gap-2">
                                                        <span class="text-sm font-semibold text-slate-800">
                                                            @(string.IsNullOrWhiteSpace(rv.UserName) ? "Reviewer" : rv.UserName)
                                                        </span>

                                                        <span class="inline-flex items-center rounded-full bg-indigo-50 px-2 py-0.5 text-[11px] font-medium text-indigo-700 border border-indigo-100">
                                                            @rv.RoleReview
                                                        </span>
                                                    </div>
                                                </div>

                                                <div class="shrink-0 text-right text-[11px] text-slate-500">
                                                    @rv.CreatedAt.ToString("dd MMM yyyy, HH:mm")
                                                </div>
                                            </div>

                                            <p class="mt-3 text-sm text-slate-700  w-full">
                                                @(string.IsNullOrWhiteSpace(rv.Catatan) ? "-" : rv.Catatan)
                                            </p>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="rounded-lg border border-dashed border-slate-300 bg-slate-50 p-4 text-sm text-slate-600">
                                    Belum ada review untuk RollOut ini.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- History -->
                    <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                        <div class="px-6 py-4 border-b border-slate-100">
                            <h2 class="text-sm font-semibold text-slate-800">History</h2>
                            <p class="mt-1 text-xs text-slate-500">Riwayat perubahan RollOut (ringkas).</p>
                        </div>

                        <div class="px-6 py-4">
                            @if (Model.Histories != null && Model.Histories.Any())
                            {
                                <ul class="space-y-2">
                                    @foreach (var h in Model.Histories.OrderByDescending(x => x.CreatedAt))
                                    {
                                        <li class="rounded-lg border border-slate-200 bg-slate-50 p-3">
                                            <div class="flex items-start justify-between gap-3">
                                                <div class="min-w-0">
                                                    <div class="text-sm font-semibold text-slate-800">
                                                        Version @h.Version
                                                    </div>
                                                    <div class="mt-0.5 text-xs text-slate-600">
                                                        @(string.IsNullOrWhiteSpace(h.EditorName) ? "Unknown" : h.EditorName)
                                                    </div>
                                                </div>

                                                <div class="shrink-0 text-right text-[11px] text-slate-500">
                                                    @h.CreatedAt.ToString("dd MMM yyyy, HH:mm")
                                                </div>
                                            </div>
                                            <div class="mt-3">
                                                <a href="@($"/RicRollOut/Review/History/{Model.Id}/{h.Id}")"
                                                   class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50 transition">
                                                    <i class="ri-contrast-2-line"></i>
                                                    Compare
                                                </a>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="rounded-lg border border-dashed border-slate-300 bg-slate-50 p-4 text-sm text-slate-600">
                                    Belum ada history untuk RollOut ini.
                                </div>
                            }
                        </div>
                    </div>

                </aside>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // ===== REJECT TOGGLE + VALIDASI NOTE =====
        (function () {
            const form = document.querySelector('form');
            const toggleBtn = document.getElementById('btn-reject-toggle');
            const panel = document.getElementById('reject-panel');
            const cancelBtn = document.getElementById('btn-reject-cancel');
            const noteInput = document.getElementById('RejectNote');
            const noteErr = document.getElementById('reject-note-error');

            if (!form || !toggleBtn || !panel) return;

            // simpan action yang diklik
            form.querySelectorAll('button[name="action"]').forEach(btn => {
                btn.addEventListener('click', function () {
                    form.dataset.clickedAction = this.value;
                });
            });

            toggleBtn.addEventListener('click', () => {
                panel.classList.remove('hidden');
                toggleBtn.classList.add('hidden');
                noteErr && (noteErr.style.display = 'none');
                noteInput && noteInput.focus();
            });

            cancelBtn && cancelBtn.addEventListener('click', () => {
                panel.classList.add('hidden');
                toggleBtn.classList.remove('hidden');
                if (noteInput) noteInput.value = '';
                noteErr && (noteErr.style.display = 'none');
                form.dataset.clickedAction = '';
            });

            form.addEventListener('submit', function (e) {
                if ((form.dataset.clickedAction || '').toLowerCase() !== 'reject') return;

                const val = (noteInput?.value || '').trim();
                if (!val) {
                    e.preventDefault();
                    if (noteErr) noteErr.style.display = 'block';
                    noteInput && noteInput.focus();
                }
            });
        })();

        // ===== HASHTAG =====
        (function () {
            const badgesContainer = document.getElementById('hashtag-badges');
            const input = document.getElementById('hashtag-input');
            if (!badgesContainer || !input) return;

            function reindexHiddenInputs() {
                badgesContainer.querySelectorAll('input[type="hidden"]').forEach((inp, idx) => {
                    inp.name = 'Hashtags[' + idx + ']';
                });
            }

            function ensurePlaceholder() {
                const hiddenInputs = badgesContainer.querySelectorAll('input[type="hidden"]');
                if (hiddenInputs.length === 0 && !badgesContainer.querySelector('.empty-hashtag-placeholder')) {
                    const span = document.createElement('span');
                    span.className = 'text-xs text-slate-400 empty-hashtag-placeholder';
                    span.textContent = 'Belum ada hashtag. Tambahin buat ngelompokkin RollOut lo.';
                    badgesContainer.appendChild(span);
                }
            }

            function createTagBadge(tag) {
                tag = (tag || '').trim().replace(/^#+/, '');
                if (!tag) return;

                const exists = badgesContainer.querySelector('input[type="hidden"][value="' + tag + '"]');
                if (exists) return;

                badgesContainer.querySelector('.empty-hashtag-placeholder')?.remove();

                const index = badgesContainer.querySelectorAll('input[type="hidden"]').length;

                const span = document.createElement('span');
                span.className = 'tag-badge inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2.5 py-1 text-xs font-medium text-indigo-700 border border-indigo-100';

                span.innerHTML =
                    '<span>#' + tag + '</span>' +
                    '<button type="button" class="tag-remove inline-flex h-4 w-4 items-center justify-center rounded-full bg-indigo-100 text-[10px] text-indigo-600" data-tag="' + tag + '">×</button>' +
                    '<input type="hidden" name="Hashtags[' + index + ']" value="' + tag + '" />';

                badgesContainer.appendChild(span);
            }

            input.addEventListener('keydown', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const value = input.value;
                    if ((value || '').trim()) {
                        createTagBadge(value);
                        input.value = '';
                    }
                }
            });

            badgesContainer.addEventListener('click', function (e) {
                const t = e.target;
                if (t && t.classList.contains('tag-remove')) {
                    t.closest('.tag-badge')?.remove();
                    reindexHiddenInputs();
                    ensurePlaceholder();
                }
            });

            ensurePlaceholder();
        })();

        // ===== FILE INPUT LABEL (multiple aware + reset text) =====
        document.addEventListener("change", function (e) {
            if (!(e.target instanceof HTMLInputElement)) return;
            if (e.target.type !== "file") return;

            const label = e.target.closest("label");
            if (!label) return;

            const nameEl = label.querySelector(".file-name");
            if (!nameEl) return;

            const files = e.target.files;
            if (!files || files.length === 0) {
                nameEl.textContent = "Bisa multiple file";
                return;
            }

            nameEl.textContent = (files.length === 1)
                ? files[0].name
                : files.length + " file dipilih";
        });
    </script>
}

