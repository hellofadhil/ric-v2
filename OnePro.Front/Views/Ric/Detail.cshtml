@using System.Text.Encodings.Web
@using OnePro.Front.Helpers
@using Core.Models.Enums
@model OnePro.Front.ViewModels.Ric.RicCreateViewModel

@{
    ViewData["Title"] = "RIC Detail";
    Layout = "_LayoutDashboard";

    string SafeText(string? v) => string.IsNullOrWhiteSpace(v) ? "-" : v!;
    string FileName(string url) => System.IO.Path.GetFileName(url);

    var statusText = ViewBag.Status as string ?? "-";
    var backUrl = ViewBag.BackUrl as string ?? "/Ric/User";
    var backLabel = ViewBag.BackLabel as string ?? "Back";
    var fileBase = ViewBag.FileBase as string ?? "/Ric/User/Files";
    var historyBase = ViewBag.HistoryBase as string ?? "/Ric/User/History";
}

<div class="min-h-screen bg-slate-50">
    <div class="max-w-7xl mx-auto px-2 sm:px-2 py-4">

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">

            <!-- MAIN CONTENT -->
            <div class="lg:col-span-8 space-y-4">

                <!-- Header -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100 flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3">
                        <div>
                            <h1 class="text-base sm:text-lg font-semibold text-slate-900">RIC Detail</h1>
                            <p class="mt-1 text-xs text-slate-500">
                                Lihat detail RIC, history, dan review.
                            </p>

                            <div class="mt-3 flex flex-wrap items-center gap-2 text-[11px] text-slate-500">
                                <span class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 font-mono">
                                    ID: @Model.Id
                                </span>
                                <span class="@($"{StatusBadgeHelper.GetStatusBadgeClass(statusText)} inline-flex items-center gap-2 rounded-full px-3 py-1")">
                                    Status: @statusText
                                </span>
                            </div>
                        </div>

                        <a href="@backUrl"
                           class="inline-flex items-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50 transition">
                            @backLabel
                        </a>
                    </div>
                </div>

                <!-- Judul Permintaan -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Judul Permintaan</h2>
                        <p class="mt-1 text-xs text-slate-500">Ringkasan permintaan (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-800">
                            @SafeText(Model.JudulPermintaan)
                        </div>
                    </div>
                </div>

                <!-- Hashtag (read-only) -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Hashtag</h2>
                        <p class="mt-1 text-xs text-slate-500">Label pengelompokan RIC (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        @if (Model.Hashtags != null && Model.Hashtags.Any())
                        {
                            <div class="flex flex-wrap gap-2">
                                @foreach (var tag in Model.Hashtags)
                                {
                                    <span class="inline-flex items-center rounded-full bg-indigo-50 px-2.5 py-1 text-xs font-medium text-indigo-700 border border-indigo-100">
                                        #@tag
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="rounded-lg border border-dashed border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
                                Belum ada hashtag.
                            </div>
                        }
                    </div>
                </div>

                <!-- As-is Process & RASCI (read-only files) -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">As-is Process &amp; RASCI</h2>
                        <p class="mt-1 text-xs text-slate-500">Dokumen proses saat ini &amp; RASCI (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        @if (Model.ExistingAsIsFileUrls != null && Model.ExistingAsIsFileUrls.Any())
                        {
                            <a href="@($"{fileBase}/{Model.Id}/asis")"
                               class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 transition">
                                <i class="ri-download-2-line"></i>
                                Download all files (@Model.ExistingAsIsFileUrls.Count)
                            </a>
                        }
                        else
                        {
                            <div class="rounded-lg border border-dashed border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
                                Tidak ada file.
                            </div>
                        }
                    </div>
                </div>

                <!-- Permasalahan -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Permasalahan</h2>
                        <p class="mt-1 text-xs text-slate-500">Masalah utama pada proses saat ini (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-800 whitespace-pre-line">
                            @SafeText(Model.Permasalahan)
                        </div>
                    </div>
                </div>

                <!-- Dampak Masalah -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Dampak Masalah</h2>
                        <p class="mt-1 text-xs text-slate-500">Impact ke bisnis/cost/waktu/kualitas (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-800 whitespace-pre-line">
                            @SafeText(Model.DampakMasalah)
                        </div>
                    </div>
                </div>

                <!-- Faktor Penyebab -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Faktor Penyebab Masalah</h2>
                        <p class="mt-1 text-xs text-slate-500">Akar masalahnya (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-800 whitespace-pre-line">
                            @SafeText(Model.FaktorPenyebab)
                        </div>
                    </div>
                </div>

                <!-- Solusi Saat Ini -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Solusi Saat Ini (kalau ada)</h2>
                        <p class="mt-1 text-xs text-slate-500">Workaround / solusi sementara (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-800 whitespace-pre-line">
                            @SafeText(Model.SolusiSaatIni)
                        </div>
                    </div>
                </div>

                <!-- Alternatif Solusi -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Alternatif Solusi</h2>
                        <p class="mt-1 text-xs text-slate-500">Opsi solusi yang diajukan (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        @if (Model.Alternatifs != null && Model.Alternatifs.Any())
                        {
                            <div class="flex flex-wrap gap-2">
                                @foreach (var alt in Model.Alternatifs)
                                {
                                    <span class="inline-flex items-center rounded-full bg-emerald-50 px-2.5 py-1 text-xs font-medium text-emerald-700 border border-emerald-100">
                                        @alt
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="rounded-lg border border-dashed border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
                                Belum ada alternatif solusi.
                            </div>
                        }
                    </div>
                </div>

                <!-- To-Be Process / Business RASCI / KKI -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">To-Be Process / Business RASCI / KKI</h2>
                        <p class="mt-1 text-xs text-slate-500">Dokumen target process / pendukung (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        @if (Model.ExistingToBeFileUrls != null && Model.ExistingToBeFileUrls.Any())
                        {
                            <a href="@($"{fileBase}/{Model.Id}/tobe")"
                               class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 transition">
                                <i class="ri-download-2-line"></i>
                                Download all files (@Model.ExistingToBeFileUrls.Count)
                            </a>
                        }
                        else
                        {
                            <div class="rounded-lg border border-dashed border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
                                Tidak ada file.
                            </div>
                        }
                    </div>
                </div>

                <!-- Expected Completion Target -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Expected Completion Target</h2>
                        <p class="mt-1 text-xs text-slate-500">Timeline / target penyelesaian (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        @if (Model.ExistingExpectedCompletionFileUrls != null && Model.ExistingExpectedCompletionFileUrls.Any())
                        {
                            <a href="@($"{fileBase}/{Model.Id}/expected")"
                               class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 transition">
                                <i class="ri-download-2-line"></i>
                                Download all files (@Model.ExistingExpectedCompletionFileUrls.Count)
                            </a>
                        }
                        else
                        {
                            <div class="rounded-lg border border-dashed border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
                                Tidak ada file.
                            </div>
                        }
                    </div>
                </div>

                <!-- Potensi Value Creation -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Potensi Value Creation</h2>
                        <p class="mt-1 text-xs text-slate-500">Manfaat (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-800 whitespace-pre-line">
                            @SafeText(Model.PotentialValue)
                        </div>
                    </div>
                </div>

                <!-- Hasil Setelah Perbaikan -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Hasil Setelah Perbaikan</h2>
                        <p class="mt-1 text-xs text-slate-500">Bisa diisi setelah implementasi (read-only).</p>
                    </div>
                    <div class="px-6 py-4">
                        <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-800 whitespace-pre-line">
                            @SafeText(Model.HasilSetelahPerbaikan)
                        </div>
                    </div>
                </div>

            </div>
            <!-- END MAIN CONTENT -->

            <!-- RIGHT SIDEBAR -->
            <aside class="lg:col-span-4 space-y-4 lg:sticky lg:top-6 h-fit">

                <!-- Reviews -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">Reviews</h2>
                        <p class="mt-1 text-xs text-slate-500">Catatan reviewer untuk RIC ini.</p>
                    </div>

                    <div class="px-6 py-4">
                        @if (Model.Reviews != null && Model.Reviews.Any())
                        {
                            <div class="space-y-3">
                                @foreach (var rv in Model.Reviews.OrderByDescending(x => x.CreatedAt))
                                {
                                    <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
                                        <div class="flex items-start justify-between gap-3">
                                            <div class="min-w-0">
                                                <div class="flex flex-wrap items-center gap-2">
                                                    <span class="text-sm font-semibold text-slate-800">
                                                        @(string.IsNullOrWhiteSpace(rv.UserName) ? "Reviewer" : rv.UserName)
                                                    </span>

                                                    <span class="inline-flex items-center rounded-full bg-indigo-50 px-2 py-0.5 text-[11px] font-medium text-indigo-700 border border-indigo-100">
                                                        @rv.RoleReview
                                                    </span>
                                                </div>
                                            </div>

                                            <div class="shrink-0 text-right text-[11px] text-slate-500">
                                                @rv.CreatedAt.ToString("dd MMM yyyy, HH:mm")
                                            </div>
                                        </div>

                                        <p class="mt-3 text-sm text-slate-700 w-full break-words whitespace-pre-line">
                                            @(string.IsNullOrWhiteSpace(rv.Catatan) ? "-" : rv.Catatan)
                                        </p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="rounded-lg border border-dashed border-slate-300 bg-slate-50 p-4 text-sm text-slate-600">
                                Belum ada review untuk RIC ini.
                            </div>
                        }
                    </div>
                </div>

                <!-- History -->
                <div class="rounded-xl bg-white shadow-sm border border-slate-100">
                    <div class="px-6 py-4 border-b border-slate-100">
                        <h2 class="text-sm font-semibold text-slate-800">History</h2>
                        <p class="mt-1 text-xs text-slate-500">Riwayat perubahan RIC (ringkas).</p>
                    </div>

                    <div class="px-6 py-4">
                        @if (Model.Histories != null && Model.Histories.Any())
                        {
                            <ul class="space-y-2">
                                @foreach (var h in Model.Histories.OrderByDescending(x => x.CreatedAt))
                                {
                                    <li class="rounded-lg border border-slate-200 bg-slate-50 p-3">
                                        <div class="flex items-start justify-between gap-3">
                                            <div class="min-w-0">
                                                <div class="text-sm font-semibold text-slate-800">
                                                    Version @h.Version
                                                </div>
                                                <div class="mt-0.5 text-xs text-slate-600">
                                                    @(string.IsNullOrWhiteSpace(h.EditorName) ? "Unknown" : h.EditorName)
                                                </div>
                                            </div>

                                                <div class="shrink-0 text-right text-[11px] text-slate-500">
                                                    @h.CreatedAt.ToString("dd MMM yyyy, HH:mm")
                                                </div>
                                            </div>
                                        <div class="mt-3">
                                            <a href="@($"{historyBase}/{Model.Id}/{h.Id}")"
                                               class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50 transition">
                                                <i class="ri-contrast-2-line"></i>
                                                Compare
                                            </a>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="rounded-lg border border-dashed border-slate-300 bg-slate-50 p-4 text-sm text-slate-600">
                                Belum ada history untuk RIC ini.
                            </div>
                        }
                    </div>
                </div>

            </aside>
            <!-- END SIDEBAR -->

        </div>
    </div>
</div>
