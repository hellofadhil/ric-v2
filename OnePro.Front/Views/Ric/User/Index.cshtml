@using OnePro.Front.ViewModels.Ric
@using OnePro.Front.Helpers
@using Core.Models.Enums
@model List<RicItemResponse>

@{
    ViewData["Title"] = "RIC List";
    Layout = "_LayoutDashboard";

    var total = Model?.Count ?? 0;
    var q = Context.Request.Query["q"].ToString();
    var statusFilter = Context.Request.Query["status"].ToString();
    var role = Context.Session.GetString("UserRole") ?? "";
    var canCreate = string.Equals(role, Role.User_Pic.ToString(), StringComparison.OrdinalIgnoreCase);
    var canManage = canCreate;
}

<div class="max-w-6xl mx-auto mt-6">

    <!-- HEADER -->
    <div class="mt-8">
        <div class="bg-white rounded-2xl border border-gray-200/80 p-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                    <h1 class="text-xl font-semibold text-gray-900 tracking-tight">RIC New Development & Enhancement</h1>
                    <p class="text-sm text-gray-500 mt-1">Kelola dan pantau RIC kamu secara terstruktur.</p>
                </div>

                @if (canCreate)
                {
                    <a asp-action="Create"
                       class="@BtnPrimary()">
                        <i class="ri-add-line text-lg"></i>
                        Create RIC
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- TOOLBAR -->
    <div class="mt-6 bg-white rounded-2xl border border-gray-200/80 p-5">
        <form method="get" class="flex flex-col md:flex-row md:items-end gap-4">
            <div class="flex-1">
                <label class="text-xs text-gray-500">Search</label>
                <div class="relative mt-1">
                    <i class="ri-search-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input name="q"
                           type="text"
                           value="@q"
                           placeholder="Cari judul, ID, atau #hashtag..."
                           class="@InputBase("pl-10")" />
                </div>
            </div>

            <div class="w-full md:w-56">
                <label class="text-xs font-medium text-gray-600">Status</label>
                <div class="relative mt-1">
                    <i class="ri-filter-3-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>

                    <select name="status"
                            class="w-full appearance-none pl-10 pr-9 py-2.5 rounded-xl border border-gray-200 bg-white text-sm
                                   focus:outline-none focus:ring-2 focus:ring-gray-900/10 hover:border-gray-300 transition">
                        <option value="" selected="@(string.IsNullOrWhiteSpace(statusFilter) ? "selected" : null)">All Status</option>
                        <option value="@S.Draft" selected="@(statusFilter == S.Draft ? "selected" : null)">Draft</option>
                        <option value="@S.Return" selected="@(statusFilter == S.Return ? "selected" : null)">Return BR To User</option>
                        <option value="@S.Submitted" selected="@(statusFilter == S.Submitted ? "selected" : null)">Submitted</option>
                        <option value="@S.Approved" selected="@(statusFilter == S.Approved ? "selected" : null)">Approved</option>
                        <option value="@S.Rejected" selected="@(statusFilter == S.Rejected ? "selected" : null)">Rejected</option>
                    </select>

                    <i class="ri-arrow-down-s-line absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>
                </div>
            </div>

            <button type="submit" class="@BtnPrimary()">
                <i class="ri-search-line"></i>
                Search
            </button>

            <a asp-action="UserIndex" class="@BtnGhost()">
                <i class="ri-refresh-line"></i>
                Reset
            </a>
        </form>
        <div class="mt-3 text-xs text-gray-500">Menampilkan maksimal 10 data.</div>
    </div>

    <!-- TABLE -->
    <div class="mt-6 bg-white rounded-2xl border border-gray-200/80 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="bg-gray-50/60 text-gray-500 uppercase text-xs">
                    <tr>
                        <th class="px-6 py-4 text-left">ID</th>
                        <th class="px-6 py-4 text-left">Judul</th>
                        <th class="px-6 py-4 text-left">User PIC</th>
                        <th class="px-6 py-4 text-left">Status</th>
                        <th class="px-6 py-4 text-left">Last Update</th>
                        <th class="px-6 py-4 text-center">Action</th>
                    </tr>
                </thead>

                <tbody id="ricTableBody" class="divide-y divide-gray-100">
                    @if (Model?.Any() == true)
                    {
                        foreach (var item in Model)
                        {
                            var status = item.Status ?? "";
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 font-mono text-xs text-gray-500">
                                    <div class="truncate max-w-[7rem]" title="@item.Id">@item.Id</div>
                                </td>

                                <td class="px-6 py-4">
                                    <div class="font-medium text-gray-900 leading-snug">
                                        @Trunc(item.Judul, 60)
                                    </div>

                                    @if (item.Hastag?.Any() == true)
                                    {
                                        <div class="mt-2 flex flex-wrap gap-1.5">
                                            @foreach (var t in item.Hastag.Take(6))
                                            {
                                                <span class="inline-flex items-center rounded-full border border-gray-200 bg-gray-50 px-2 py-0.5 text-[11px] text-gray-700">
                                                    #@t
                                                </span>
                                            }
                                            @if (item.Hastag.Count > 6)
                                            {
                                                <span class="text-[11px] text-gray-400">+@(item.Hastag.Count - 6)</span>
                                            }
                                        </div>
                                    }
                                </td>

                                <td class="px-6 py-4 text-gray-700">@item.UserName</td>

                                <td class="px-6 py-4">
                                    <span class="@($"{GetStatusBadgeClass(status)} inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium")">
                                        @status
                                    </span>
                                </td>

                                <td class="px-6 py-4 text-xs text-gray-500">
                                    @item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                </td>

                                <td class="px-6 py-4">
                                    <div class="flex items-center justify-center gap-1">

                                        <!-- Detail -->
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="@IconBtn()"
                                           title="Detail">
                                            <i class="ri-eye-line text-gray-700"></i>
                                        </a>

                                        <!-- Update (Return_BR_To_User) -->
                                        @if (canManage && status == S.Return)
                                        {
                                            <a asp-action="Update" asp-route-id="@item.Id"
                                               class="inline-flex items-center gap-2 rounded-2xl border border-gray-200 px-4 py-2 hover:bg-yellow-50 transition"
                                               title="Update RIC">
                                                <i class="ri-edit-2-line text-yellow-600 text-lg"></i>
                                                <span class="text-sm font-medium text-yellow-700">Update</span>
                                            </a>
                                        }

                                        <!-- Draft actions -->
                                        @if (canManage && status == S.Draft)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               title="Edit RIC"
                                               class="@IconBtn("hover:bg-yellow-50")">
                                                <i class="ri-edit-2-line text-yellow-600 text-lg"></i>
                                            </a>

                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        title="Delete RIC"
                                                        onclick="return confirm('Yakin ingin menghapus RIC ini?')"
                                                        class="@IconBtn("hover:bg-red-50")">
                                                    <i class="ri-delete-bin-line text-red-600 text-lg"></i>
                                                </button>
                                            </form>
                                        }

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center gap-2">
                                    <div class="w-14 h-14 rounded-2xl bg-gray-50 border border-gray-200 flex items-center justify-center">
                                        <i class="ri-inbox-line text-3xl text-gray-300"></i>
                                    </div>
                                    <p class="text-gray-700 font-semibold">Belum ada RIC untuk group kamu.</p>
                                    <p class="text-gray-500 text-sm">Nanti kalau ada, bakal muncul rapi di sini.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="px-6 py-4 border-t border-gray-100 text-xs text-gray-500 flex items-center justify-between">
            <span>Gunakan search untuk mempercepat pencarian.</span>
            <span class="font-medium">Showing @total</span>
        </div>
    </div>
</div>

@functions {
    // Status constants biar gak typo di mana-mana
    private static class S
    {
        public const string Draft = "Draft";
        public const string Return = "Return_BR_To_User";
        public const string Submitted = "Submitted";
        public const string Approved = "Approved";
        public const string Rejected = "Rejected";
    }

    private string Trunc(string? text, int max)
    {
        if (string.IsNullOrWhiteSpace(text)) return "-";
        return text.Length > max ? text.Substring(0, max) + "..." : text;
    }

    private string InputBase(string extra = "")
        => $"w-full {extra} pr-3 py-2.5 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-900/10 text-sm";

    private string BtnPrimary()
        => "inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-red-700 hover:bg-red-800 text-white text-sm font-medium transition";

    private string BtnGhost()
        => "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl border border-gray-200 text-sm text-gray-700 hover:bg-gray-50 transition";

    private string IconBtn(string extraHover = "hover:bg-gray-100")
        => $"w-9 h-9 inline-flex items-center justify-center rounded-lg border border-gray-200 {extraHover} transition";

    private string GetStatusBadgeClass(string status)
        => StatusBadgeHelper.GetStatusBadgeClass(status);
}
