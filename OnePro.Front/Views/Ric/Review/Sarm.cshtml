@using OnePro.Front.ViewModels.Ric
@using OnePro.Front.Helpers
@using Core.Models.Enums

@model List<RicItemResponse>

@{
    ViewData["Title"] = "RIC List";
    Layout = "_LayoutDashboard";

    var userRole = ViewBag.UserRole as string ?? "";
    var total = Model?.Count ?? 0;
    var q = Context.Request.Query["q"].ToString();
    var statusFilter = Context.Request.Query["status"].ToString();
    var draftCount = Model?.Count(x => x.Status == StatusRic.Draft.ToString()) ?? 0;
    var inReviewCount =
        (Model?.Count(x =>
            x.Status == StatusRic.Submitted_To_BR.ToString() ||
            x.Status == StatusRic.Review_BR.ToString() ||
            x.Status == StatusRic.Review_SARM.ToString() ||
            x.Status == StatusRic.Review_ECS.ToString()
        ) ?? 0);
    var doneCount = Model?.Count(x => x.Status == StatusRic.Done.ToString()) ?? 0;
}

<div class="max-w-6xl mx-auto mt-6">



    @* TOOLBAR *@
    <div class="mt-5 bg-white border border-gray-200 shadow-lg rounded-3xl p-4 md:p-5">
        <form method="get" class="flex flex-col md:flex-row md:items-center gap-3 md:gap-4">
            <div class="flex-1">
                <label class="text-xs text-gray-500">Search (judul / user / id)</label>
                <div class="mt-1 relative">
                    <i class="ri-search-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input name="q"
                           type="text"
                           value="@q"
                           placeholder="Ketik buat cari..."
                           class="w-full pl-10 pr-3 py-2.5 rounded-2xl border border-gray-200
                                  focus:outline-none focus:ring-2 focus:ring-red-500/30 focus:border-red-300
                                  text-sm" />
                </div>
            </div>

            <div class="w-full md:w-56">
                <label class="text-xs text-gray-500">Filter Status</label>
                <select name="status"
                        class="mt-1 w-full px-3 py-2.5 rounded-2xl border border-gray-200
                               focus:outline-none focus:ring-2 focus:ring-red-500/30 focus:border-red-300
                               text-sm">
                    <option value="" selected="@(string.IsNullOrWhiteSpace(statusFilter) ? "selected" : null)">All</option>
                    <option value="Draft" selected="@(statusFilter == "Draft" ? "selected" : null)">Draft</option>
                    <option value="Submitted_To_BR" selected="@(statusFilter == "Submitted_To_BR" ? "selected" : null)">Submitted To BR</option>
                    <option value="Review_BR" selected="@(statusFilter == "Review_BR" ? "selected" : null)">Review BR</option>
                    <option value="Review_SARM" selected="@(statusFilter == "Review_SARM" ? "selected" : null)">Review SARM</option>
                    <option value="Review_ECS" selected="@(statusFilter == "Review_ECS" ? "selected" : null)">Review ECS</option>
                    <option value="Done" selected="@(statusFilter == "Done" ? "selected" : null)">Done</option>
                </select>
            </div>

            <button type="submit"
                    class="w-full md:w-auto inline-flex items-center gap-2 px-4 py-2.5 rounded-2xl
                           bg-red-700 text-white hover:bg-red-800 text-sm font-medium transition">
                <i class="ri-search-line"></i>
                Search
            </button>

            <a asp-action="ReviewIndex"
               class="w-full md:w-auto inline-flex items-center gap-2 px-4 py-2.5 rounded-2xl
                      border border-gray-200 hover:bg-gray-50 text-sm font-medium transition">
                <i class="ri-refresh-line"></i>
                Reset
            </a>
        </form>
        <div class="mt-3 text-xs text-gray-500">Menampilkan maksimal 10 data.</div>
    </div>

    @* TABLE *@
    <div class="mt-5 bg-white border border-gray-200 shadow-xl rounded-3xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-left text-gray-700">
                <thead class="bg-gray-50 text-gray-600 uppercase text-xs">
                    <tr>
                        <th scope="col" class="px-5 py-4 w-40">ID</th>
                        <th scope="col" class="px-5 py-4">Judul</th>
                        <th scope="col" class="px-5 py-4">User PIC</th>
                        <th scope="col" class="px-5 py-4 w-32">Status</th>
                        <th scope="col" class="px-5 py-4 w-40">Last Update</th>
                        <th scope="col" class="px-5 py-4 w-44 text-center">Actions</th>
                    </tr>
                </thead>

                <tbody id="ricTableBody" class="divide-y divide-gray-100 bg-white">
                    @if (Model?.Any() == true)
                    {
                        foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50/80 transition-colors duration-150">
                                <td class="px-5 py-4 text-xs text-gray-500 font-mono">
                                    <div class="truncate max-w-[7rem]" title="@item.Id">@item.Id</div>
                                </td>

                                <td class="px-5 py-4">
<div class="font-semibold text-gray-900"
     title="@item.Judul">
    @(item.Judul?.Length > 50 
        ? item.Judul.Substring(0, 50) + "..." 
        : item.Judul)
</div>
                                    @* <div class="text-xs text-gray-500 mt-0.5">
                                        <span class="inline-flex items-center gap-1">
                                            <i class="ri-hashtag text-gray-400"></i>
                                            @item.Status
                                        </span>
                                    </div> *@
                                </td>

                                <td class="px-5 py-4 text-gray-700">
                                    <div class="inline-flex items-center gap-2">
                                        <div class="leading-tight">
                                            <div class="font-medium">@item.UserName</div>
                                        </div>
                                    </div>
                                </td>

                                <td class="px-5 py-4">
                                    <span class="@GetStatusBadgeClass(item.Status) px-2.5 py-1 rounded-full text-xs font-semibold">
                                        @item.Status
                                    </span>
                                </td>

                                <td class="px-5 py-4 text-gray-600 text-xs">
                                    <div class="inline-flex items-center gap-2">
                                        <i class="ri-time-line text-gray-400"></i>
                                        @item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </td>

                                <td class="px-5 py-4">
                                    <div class="flex items-center justify-center gap-2">

                                        @* Details - always *@
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           title="View Details"
                                           class="inline-flex items-center justify-center w-10 h-10 rounded-2xl
                                                  border border-gray-200 hover:bg-blue-50 transition">
                                            <i class="ri-eye-line text-blue-600 text-lg"></i>
                                        </a>

                                        @* USER (creator-side) : Draft-only actions *@
                                        @if ((userRole == "0" || userRole == "1") &&
                                             item.Status == StatusRic.Draft.ToString())
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               title="Edit RIC"
                                               class="inline-flex items-center justify-center w-10 h-10 rounded-2xl
                                                      border border-gray-200 hover:bg-yellow-50 transition">
                                                <i class="ri-edit-2-line text-yellow-600 text-lg"></i>
                                            </a>

                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        title="Delete RIC"
                                                        onclick="return confirm('Yakin ingin menghapus RIC ini?')"
                                                        class="inline-flex items-center justify-center w-10 h-10 rounded-2xl
                                                               border border-gray-200 hover:bg-red-50 transition">
                                                    <i class="ri-delete-bin-line text-red-600 text-lg"></i>
                                                </button>
                                            </form>

                                            <form asp-action="Submit" asp-route-id="@item.Id" method="post" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        title="Submit to BR"
                                                        onclick="return confirm('Kirim RIC ini ke BR?')"
                                                        class="inline-flex items-center justify-center w-10 h-10 rounded-2xl
                                                               border border-gray-200 hover:bg-green-50 transition">
                                                    <i class="ri-send-plane-line text-green-600 text-lg"></i>
                                                </button>
                                            </form>
                                        }

                                        @* BR: all BR roles can review when BR status *@
                                        @* @if ((userRole == "4" || userRole == "5" || userRole == "6" || userRole == "7") && *@
                                        @if ((userRole == "4") &&
                                             (item.Status == StatusRic.Submitted_To_BR.ToString() ||
                                              item.Status == StatusRic.Review_BR.ToString()))
                                        {
                       <a asp-controller="Ric"
   asp-action="ReviewEdit"
   asp-route-id="@item.Id"
   class="inline-flex items-center gap-2 px-3 py-2 rounded-2xl
          bg-indigo-600 hover:bg-indigo-700 text-white text-xs font-semibold transition"
   title="Review RIC (BR)">
    <i class="ri-check-double-line text-base"></i>
    Review
</a>

                                        }

                                        @* SARM *@
                                        @if ((userRole == "8" || userRole == "9" || userRole == "10" || userRole == "11") &&
                                             item.Status == StatusRic.Review_SARM.ToString())
                                        {
                                            <a asp-action="Review" asp-route-id="@item.Id"
                                               class="inline-flex items-center gap-2 px-3 py-2 rounded-2xl
                                                      bg-emerald-600 hover:bg-emerald-700 text-white text-xs font-semibold transition"
                                               title="Review RIC (SARM)">
                                                <i class="ri-check-double-line text-base"></i>
                                                Review
                                            </a>
                                        }

                                        @* ECS *@
                                        @if ((userRole == "12" || userRole == "13" || userRole == "14" || userRole == "15") &&
                                             item.Status == StatusRic.Review_ECS.ToString())
                                        {
                                            <a asp-action="Review" asp-route-id="@item.Id"
                                               class="inline-flex items-center gap-2 px-3 py-2 rounded-2xl
                                                      bg-teal-600 hover:bg-teal-700 text-white text-xs font-semibold transition"
                                               title="Review RIC (ECS)">
                                                <i class="ri-check-double-line text-base"></i>
                                                Review
                                            </a>
                                        }

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center gap-2">
                                    <div class="w-14 h-14 rounded-2xl bg-gray-50 border border-gray-200 flex items-center justify-center">
                                        <i class="ri-inbox-line text-3xl text-gray-300"></i>
                                    </div>
                                    <p class="text-gray-700 font-semibold">Belum ada RIC untuk group kamu.</p>
                                    <p class="text-gray-500 text-sm">Nanti kalau ada, bakal muncul rapi di sini ðŸ˜‰</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* footer hint *@
        <div class="px-5 py-4 border-t border-gray-100 text-xs text-gray-500 flex items-center justify-between">
            <div class="inline-flex items-center gap-2">
                <i class="ri-information-line"></i>
                Tip: pakai Search biar cepet nemu RIC.
            </div>
            <div class="font-medium">Showing @total</div>
        </div>
    </div>
</div>
@functions {
    private string GetStatusBadgeClass(string status)
        => StatusBadgeHelper.GetStatusBadgeClass(status);
}
