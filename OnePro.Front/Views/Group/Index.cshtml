@section Scripts {
<script>
(() => {
  const $ = (id) => document.getElementById(id);
  const open = (id) => $(id)?.classList.remove("hidden");
  const close = (id) => $(id)?.classList.add("hidden");

  // 1) Universal: open modal
  document.addEventListener("click", (e) => {
    const t = e.target.closest("[data-modal-open],[data-open-edit],[data-open-delete]");
    if (!t) return;

    // a) old style: data-modal-open="id"
    if (t.dataset.modalOpen) open(t.dataset.modalOpen);

    // b) pencil: open edit member modal + fill data
    if (t.dataset.openEdit !== undefined) {
      $("em_id") && ($("em_id").value = t.dataset.id || "");
      $("em_name") && ($("em_name").textContent = t.dataset.name || "-");
      $("em_email") && ($("em_email").textContent = t.dataset.email || "-");
      $("em_role") && ($("em_role").value = t.dataset.role || "");
      open("editMemberModal");
    }

    // c) trash: open delete member modal + fill data
    if (t.dataset.openDelete !== undefined) {
      $("dm_id") && ($("dm_id").value = t.dataset.id || "");
      $("dm_name") && ($("dm_name").textContent = t.dataset.name || "-");
      $("dm_email") && ($("dm_email").textContent = t.dataset.email || "-");
      open("deleteMemberModal");
    }
  });

  // 2) Universal: close modal (support 2 attribute styles)
  document.addEventListener("click", (e) => {
    const t = e.target.closest("[data-close],[data-modal-close]");
    if (!t) return;

    // new style: data-close="id"
    if (t.dataset.close) close(t.dataset.close);

    // old style: data-modal-close="id"
    if (t.dataset.modalClose) close(t.dataset.modalClose);
  });
})();
</script>
}
