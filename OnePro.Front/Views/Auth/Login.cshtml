@{
    ViewData["Title"] = "Login";
    var bgSvg = "https://login.idaman.pertamina.com/assets/images/background.svg";
    var logoPng = "https://login.idaman.pertamina.com/common/images/logo.png";
}

<div class="min-h-screen relative overflow-hidden"
     style="background: radial-gradient(1200px 600px at 10% -10%, #e7ecff 0%, transparent 60%), radial-gradient(1000px 500px at 100% 0%, #e8fff7 0%, transparent 55%), linear-gradient(180deg, #f7f8ff 0%, #eef2ff 100%);">

    <div class="relative z-10 min-h-screen flex items-center justify-center px-4 py-8">
        <div class="w-full max-w-5xl bg-white/90 backdrop-blur rounded-3xl shadow-2xl ring-1 ring-slate-200/60 overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2">
                <!-- LEFT: Form -->
                <div class="p-8 sm:p-10 lg:p-12">
                    <div class="flex items-center gap-3 mb-8">
                        <img src="@logoPng" alt="Pertamina" class="h-8 sm:h-9 w-auto" />
                        <span class="text-xs text-slate-500 bg-slate-100 px-2 py-1 rounded-full">RIC Portal</span>
                    </div>

                    <div class="mb-8">
                        <h1 class="text-2xl sm:text-3xl font-semibold text-slate-900 tracking-tight">
                            Welcome back
                        </h1>
                        <p class="text-slate-500 mt-1">
                            Login to continue and manage your requests
                        </p>
                    </div>

                    <form asp-controller="Auth" asp-action="Login" method="post" class="space-y-5">
                        @Html.AntiForgeryToken()

                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-2">Email</label>
                            <input name="email" type="email" placeholder="you@example.com"
                                   class="w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-slate-800 placeholder-slate-400
                                          focus:outline-none focus:ring-4 focus:ring-indigo-100 focus:border-indigo-400 transition"
                                   required />
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-2">Password</label>
                            <input name="password" type="password" placeholder="********"
                                   class="w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-slate-800 placeholder-slate-400
                                          focus:outline-none focus:ring-4 focus:ring-indigo-100 focus:border-indigo-400 transition"
                                   required />
                        </div>

                        <div class="flex items-center justify-between pt-1">
                            <label class="inline-flex items-center gap-3 select-none">
                                <input type="checkbox" name="rememberMe"
                                       class="h-5 w-5 rounded border-slate-300 text-indigo-600 focus:ring-indigo-200" />
                                <span class="text-sm text-slate-700">Remember Me</span>
                            </label>

                            <button type="submit"
                                    class="rounded-xl bg-indigo-600 px-7 py-3 text-white font-semibold
                                           hover:bg-indigo-700 active:scale-[0.99] transition shadow-lg shadow-indigo-200">
                                Login
                            </button>
                        </div>

                        <p class="text-sm text-slate-500 pt-4">
                            Belum punya akun?
                            <a href="/Auth/Register" class="text-indigo-600 hover:text-indigo-700 font-semibold">Register</a>
                        </p>
                    </form>
                </div>

                <!-- RIGHT: Illustration panel -->
                <div class="relative hidden lg:block">
                    <div class="absolute inset-0 bg-gradient-to-br from-indigo-50 via-white to-emerald-50"></div>

                    <div class="relative h-full w-full">
                        <div class="absolute inset-0"
                             style="background-image:url('@bgSvg'); background-repeat:no-repeat; background-size:cover; background-position:center;">
                        </div>
                        <div class="absolute inset-0 bg-white/30"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
