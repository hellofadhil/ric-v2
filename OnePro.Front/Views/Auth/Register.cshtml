@{
    ViewData["Title"] = "Register";
    var bgSvg = "https://login.idaman.pertamina.com/assets/images/background.svg";
    var logoPng = "https://login.idaman.pertamina.com/common/images/logo.png";
}

<div class="min-h-screen relative overflow-hidden"
     style="background: radial-gradient(1200px 600px at 10% -10%, #e7ecff 0%, transparent 60%), radial-gradient(1000px 500px at 100% 0%, #e8fff7 0%, transparent 55%), linear-gradient(180deg, #f7f8ff 0%, #eef2ff 100%);">

    <div class="relative z-10 min-h-screen flex items-center justify-center px-4 py-6">
        <div class="w-full max-w-5xl bg-white/90 backdrop-blur rounded-3xl shadow-2xl ring-1 ring-slate-200/60 overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2">
                <!-- LEFT: Form -->
                <div class="p-6 sm:p-8 lg:p-10">
                    <div class="flex items-center gap-3 mb-6">
                        <img src="@logoPng" alt="Pertamina" class="h-7 sm:h-8 w-auto" />
                        <span class="text-xs text-slate-500 bg-slate-100 px-2 py-1 rounded-full">RIC Portal</span>
                    </div>

                    <div class="mb-6">
                        <h1 class="text-xl sm:text-2xl font-semibold text-slate-900 tracking-tight">
                            Create your account
                        </h1>
                        <p class="text-sm text-slate-500 mt-1">
                            Register to access the RIC Portal
                        </p>
                    </div>

                    <form asp-controller="Auth" asp-action="Register" method="post" class="space-y-3">
                        @Html.AntiForgeryToken()

                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1.5">Full Name</label>
                            <input name="name" type="text" placeholder="Your full name"
                                   class="w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-800 placeholder-slate-400
                                          focus:outline-none focus:ring-4 focus:ring-indigo-100 focus:border-indigo-400 transition"
                                   required />
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1.5">Email</label>
                            <input name="email" type="email" placeholder="you@example.com"
                                   class="w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-800 placeholder-slate-400
                                          focus:outline-none focus:ring-4 focus:ring-indigo-100 focus:border-indigo-400 transition"
                                   required />
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1.5">Position</label>
                            <input name="position" type="text" placeholder="Your position"
                                   class="w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-800 placeholder-slate-400
                                          focus:outline-none focus:ring-4 focus:ring-indigo-100 focus:border-indigo-400 transition"
                                   required />
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1.5">Password</label>
                            <input name="password" type="password" placeholder="********"
                                   class="w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-800 placeholder-slate-400
                                          focus:outline-none focus:ring-4 focus:ring-indigo-100 focus:border-indigo-400 transition"
                                   required />
                            <p class="text-xs text-slate-500 mt-1.5">
                                Min. 8 karakter
                            </p>
                        </div>

                        <div class="flex items-start gap-3 pt-1">
                            <input type="checkbox" required
                                   class="mt-1 h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-200" />
                            <span class="text-sm text-slate-700">
                                I agree to the Terms & Privacy Policy
                            </span>
                        </div>

                        <div class="flex items-center justify-between pt-2">
                            <a href="/Auth/Login"
                                   class="text-sm font-semibold text-slate-600 hover:text-slate-800">
                                Back to login
                            </a>

                            <button type="submit"
                                    class="rounded-xl bg-indigo-600 px-6 py-2.5 text-sm font-semibold text-white
                                           hover:bg-indigo-700 transition shadow-lg shadow-indigo-200">
                                Create Account
                            </button>
                        </div>
                    </form>
                </div>

                <!-- RIGHT: Illustration panel -->
                <div class="relative hidden lg:block">
                    <div class="absolute inset-0 bg-gradient-to-br from-indigo-50 via-white to-emerald-50"></div>
                    <div class="absolute inset-0"
                         style="background-image:url('@bgSvg'); background-repeat:no-repeat; background-size:cover; background-position:center;">
                    </div>
                    <div class="absolute inset-0 bg-white/30"></div>
                </div>
            </div>
        </div>
    </div>
</div>
